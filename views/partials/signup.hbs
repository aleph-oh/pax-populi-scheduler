<script type="text/javascript" src='/vendor/bower_components/lodash/dist/lodash.min.js'></script>
<script type="text/javascript" src='/vendor/bower_components/angular/angular.js'></script>
<script type="text/javascript" src='/vendor/bower_components/angular-timezone-selector/dist/angular-timezone-selector.js'></script>
